server {
    listen 80;
    listen [::]:80;
    server_name powertrack.petruccini.com;

    root /var/www/powertrack/dist;
    index index.html;

    # Manejo de rutas SPA - Cualquier ruta devuelve index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache para archivos estáticos
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Compresión gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/javascript application/json;

    # Seguridad básica
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

# Configuración HTTPS (recomendado)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name powertrack.petruccini.com;

    # Certificados SSL (ajustar rutas según instalación)
    ssl_certificate /etc/ssl/certs/powertrack.crt;
    ssl_certificate_key /etc/ssl/private/powertrack.key;

    root /var/www/powertrack/dist;
